#!/bin/bash

unclutter-xfixes --timeout 0 --hide-on-touch --always --exclude-root --start-hidden  &

sleep 5

URL="http://localhost:80"
SCALE_FACTOR="1"

if [[ "__SCREEN__" == "true" && -n "__SCREEN_SIZE__" ]]; then
  URL+="?screen=__SCREEN_SIZE__"
  SCALE_FACTOR="1"
fi

chromium-browser \
  --noerrdialogs \
  --disable-infobars \
  --incognito \
  --no-sandbox \
  --touch-events=enabled \
  --force-device-scale-factor=$SCALE_FACTOR \
  --kiosk $URL
